{
  "name": "chiristo.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "release": "sh ./scripts/release.sh",
    "dev": "env-cmd -f .env.dev next dev --turbopack -p 3010",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:check": "prettier --check src",
    "format:apply": "prettier --write src",
    "deploy:dev": "firebase use default && env-cmd -f .env.dev next build && firebase deploy --only hosting,apphosting",
    "deploy:prod": "firebase use prod && env-cmd -f .env.prod --silent next build && firebase deploy --only hosting,apphosting --config firebase-prod/firebase.json"
  },
  "dependencies": {
    "firebase": "^11.9.1",
    "framer-motion": "^12.23.0",
    "motion": "^12.18.1",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "use-debounce": "^10.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/webpack": "^5.28.5",
    "env-cmd": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "prettier": "^3.5.3",
    "sass": "^1.89.2",
    "scss": "^0.2.4",
    "standard-version": "^9.5.0",
    "typescript": "^5",
    "webpack": "^5.99.9"
  }
}
